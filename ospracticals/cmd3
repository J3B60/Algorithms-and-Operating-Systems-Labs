# Menu script
echo " 0: Exit"
echo " 1: Show Date and Time"
echo " 2: List my HOME directory"
echo " 3: Display Calendar"
echo " Enter your choice:"
#Note this read command below is asking user for input during execution of code and not argument input
read option
case $option in
	0) echo "good bye" ;;
	1) date ;;
	2) ls $HOME ;;
	3) cal ;;
	*) echo "Invalid input. Good bye." ;;
esac
